            OwnerLevel: { OwnerLevelID: "", LevelName: "" },
            Owner: { OwnerID: "", OwnerName: "" },
            DocCategory: { DocCategoryID: "", DocCategoryName: "" },
            DocType: { DocTypeID: "", DocTypeName: "" },
            DocProperty: { DocPropertyID: "", DocPropertyName: "" },
            DocMetaID: "",
            DocPropIdentifyID: "",
            MetaValue: "",
            Remarks: "",
            IdentificationAttribute: "",
            AttributeValue: "",
            SearchBy: "",
            DidtributionOf: "",
            DocVersionID: ""

