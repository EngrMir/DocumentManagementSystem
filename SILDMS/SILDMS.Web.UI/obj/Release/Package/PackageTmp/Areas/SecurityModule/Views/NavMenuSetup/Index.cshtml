                    $('#addModal').modal('hide');
                    $scope.loading = false;
                    toastr.success(data);
                }).error(function (data) {
                    $scope.loading = false;
                    toastr.error('Update Faild.');
                });
            }
            else {
                // Save
                // $scope.loading = true;
                $http.post('/SecurityModule/Menu/SetMenu/', JSON.stringify(convArrToObj($scope.vmMenuDetails))).success(function (data) {
