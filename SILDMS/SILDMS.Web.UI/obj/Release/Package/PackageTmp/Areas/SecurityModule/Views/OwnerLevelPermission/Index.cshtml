                                                        <input st-search="UserFullName"
                                                               placeholder="UserFullName" class="input-sm form-control"
                                                               type="search" />
                                                    </th>
                                                    <th>
                                                        <input st-search="UserDesignation" placeholder="UserDesignation"
                                                               class="input-sm form-control" type="search" />
                                                    </th>

